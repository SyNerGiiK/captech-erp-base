import React, { useEffect, useState } from "react";
import { api } from "./api";

export default function Invoices() {
  const [clients, setClients] = useState([]);
  const [invoices, setInvoices] = useState([]);
  const [status, setStatus] = useState("");
  const [q, setQ] = useState("");
  const [form, setForm] = useState({ title:"", client_id:0, issued_date:"", due_date:"" });
  const [sel, setSel] = useState(null);
  const [lines, setLines] = useState([]);
  const [payments, setPayments] = useState([]);
  const [line, setLine] = useState({ description:"", qty:1, unit_price_cents:0 });
  const [pay, setPay] = useState({ amount_cents:0, method:"", paid_at:"", note:"" });
  const [vat, setVat] = useState(20);
  const [summary, setSummary] = useState(null);
  const [msg, setMsg] = useState("");

  const loadLists = async () => {
    const cs = await api.listClients({ limit:200 }); setClients(cs);
    const invs = await api.listInvoices({ status: status || undefined, q: q || undefined }); setInvoices(invs);
  };
  useEffect(() => { loadLists(); }, []);
  useEffect(() => { loadLists(); }, [status]);

  const selectInvoice = async (inv) => {
    setSel(inv);
    const [ln, py] = await Promise.all([api.listLines(inv.id), api.listPayments(inv.id)]);
    setLines(ln); setPayments(py);
    await refreshSummary(inv.id, vat);
  };

  const refreshSummary = async (id, v) => {
    try {
      const url = `/invoices/${id}/summary?vat_percent=${encodeURIComponent(v)}`;
      const res = await fetch((import.meta.env.VITE_USE_PROXY==="1"?"/api":(import.meta.env.VITE_API_URL??"http://localhost:8000")) + url, { headers: { "Authorization": `Bearer ${localStorage.getItem("token")||""}` }});
      if (!res.ok) throw new Error("summary failed");
      setSummary(await res.json());
    } catch { setSummary(null); }
  };

  const createInvoice = async () => {
    setMsg("");
    try {
      if (!form.title.trim() || !form.client_id) throw new Error("Titre et client requis");
      const inv = await api.createInvoice(form);
      await loadLists();
      setForm({ title:"", client_id:0, issued_date:"", due_date:"" });
      await selectInvoice(inv);
    } catch(e) { setMsg(String(e.message)); }
  };

  const addLine = async () => {
    setMsg("");
    try {
      if (!sel) throw new Error("SÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬ÃƒÂ¢Ã¢â‚¬Å¾Ã‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€šÃ‚Â ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¾Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¡ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¾ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬ÃƒÂ¢Ã¢â‚¬Å¾Ã‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¡ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â¦ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¡ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã¢â‚¬Â¦Ãƒâ€šÃ‚Â¡ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¡ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â©lectionne une facture");
      if (!line.description.trim()) throw new Error("Description requise");
      await api.addLine(sel.id, { ...line, qty:Number(line.qty), unit_price_cents:Number(line.unit_price_cents) });
      const ln = await api.listLines(sel.id); setLines(ln);
      const rec = await api.recalc(sel.id);
      const fresh = await api.getInvoice(sel.id);
      setSel({ ...fresh, total_cents: rec.total_cents });
      setLine({ description:"", qty:1, unit_price_cents:0 });
      await refreshSummary(sel.id, vat);
    } catch(e) { setMsg(String(e.message)); }
  };

  const delLine = async (lid) => {
    setMsg("");
    try {
      if (!sel) return;
      await api.delLine(sel.id, lid);
      const ln = await api.listLines(sel.id); setLines(ln);
      const rec = await api.recalc(sel.id);
      const fresh = await api.getInvoice(sel.id);
      setSel({ ...fresh, total_cents: rec.total_cents });
      await refreshSummary(sel.id, vat);
    } catch(e) { setMsg(String(e.message)); }
  };

  const addPayment = async () => {
    setMsg("");
    try {
      if (!sel) throw new Error("SÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬ÃƒÂ¢Ã¢â‚¬Å¾Ã‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€šÃ‚Â ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¾Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¡ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¾ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬ÃƒÂ¢Ã¢â‚¬Å¾Ã‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¡ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â¦ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â¡ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã¢â‚¬Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ÃƒÆ’Ã†â€™Ãƒâ€šÃ‚Â¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡Ãƒâ€šÃ‚Â¬ÃƒÆ’Ã¢â‚¬Â¦Ãƒâ€šÃ‚Â¡ÃƒÆ’Ã†â€™Ãƒâ€ Ã¢â‚¬â„¢ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬Ãƒâ€¦Ã‚Â¡ÃƒÆ’Ã†â€™ÃƒÂ¢Ã¢â€šÂ¬Ã…Â¡ÃƒÆ’Ã¢â‚¬Å¡Ãƒâ€šÃ‚Â©lectionne une facture");
      await api.addPayment(sel.id, { ...pay, amount_cents:Number(pay.amount_cents) });
      const py = await api.listPayments(sel.id); setPayments(py);
      const fresh = await api.getInvoice(sel.id); setSel(fresh);
      setPay({ amount_cents:0, method:"", paid_at:"", note:"" });
      await refreshSummary(sel.id, vat);
    } catch(e) { setMsg(String(e.message)); }
  };

  const changeStatus = async (newStatus) => {
    if (!sel) return;
    try {
      const url = `/invoices/${sel.id}/status?status=${encodeURIComponent(newStatus)}`;
      const res = await fetch((import.meta.env.VITE_USE_PROXY==="1"?"/api":(import.meta.env.VITE_API_URL??"http://localhost:8000")) + url, {
        method: "POST", headers: { "Authorization": `Bearer ${localStorage.getItem("token")||""}` }
      });
      if (!res.ok) throw new Error("status failed");
      const inv = await res.json(); setSel(inv);
      await refreshSummary(inv.id, vat);
    } catch(e){ setMsg(String(e.message)); }
  };

  const exportCSV = (what) => {
    const base = (import.meta.env.VITE_USE_PROXY==="1"?"/api":(import.meta.env.VITE_API_URL??"http://localhost:8000"));
    const url = what === "invoices" ? `${base}/invoices/export.csv` : `${base}/invoices/payments/export.csv${sel?`?invoice_id=${sel.id}`:""}`;
    window.open(url, "_blank");
  };

  const downloadHTML = () => {
    if (!sel) return;
    const base = (import.meta.env.VITE_USE_PROXY==="1"?"/api":(import.meta.env.VITE_API_URL??"http://localhost:8000"));
    const url = `${base}/invoices/${sel.id}/download.html?vat_percent=${encodeURIComponent(vat)}`;
    window.open(url, "_blank");
  };

  const fmt = (cts)=> (cts/100).toLocaleString("fr-FR", { style:"currency", currency:"EUR" });

  return (
    <div>
      <h2>Factures</h2>

      <div style={{ display:"flex", gap:8, alignItems:"center", marginBottom:12 }}>
        <select value={status} onChange={e=>setStatus(e.target.value)}>
          <option value="">-- statut --</option>
          <option value="draft">draft</option>
          <option value="sent">sent</option>
          <option value="paid">paid</option>
          <option value="cancelled">cancelled</option>
        </select>
        <input placeholder="Recherche titre..." value={q} onChange={(e)=>setQ(e.target.value)} />
        <button onClick={loadLists}>Rechercher</button>
